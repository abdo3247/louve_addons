<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record id="view_template_history_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <page name="sales" position="after">
                <page string="History" name="history">
                    <field name="product_history_ids">
                        <tree string="Product History">
                            <field name="product_id"/>
                            <field name="date"/>
                            <field name="location_id"/>
                            <field name="start_qty"/>
                            <field name="purchase_qty"/>
                            <field name="production_qty"/>
                            <field name="sale_qty"/>
                            <field name="loss_qty"/>
                            <field name="end_qty"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>
    </data>
</openerp>
