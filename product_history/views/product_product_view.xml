<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record id="view_product_history_form" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <page name="sales" position="after">
                <page string="History" name="history">
                    <group name="options">
                        <field name="history_range"/>
                    </group>
                    <button name="action_compute_history" string="Send RFQ by Email" type="object" class="oe_highlight"/>
                    <field name="product_history_ids">
                        <tree string="Product History">
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="location_id" groups="stock.group_locations"/>
                            <field name="start_qty"/>
                            <field name="purchase_qty"/> <!-- groups="group_purchase_user" -->
                            <field name="production_qty"/> <!-- groups="group_mrp_user" -->
                            <field name="sale_qty"/> <!-- groups="group_sale_user" -->
                            <field name="loss_qty"/>
                            <field name="end_qty"/>
                            <field name="incoming_qty"/>
                            <field name="outgoing_qty"/>
                            <field name="virtual_qty"/>
                            <field name="ignored" invisible="True"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>
    </data>
</openerp>
